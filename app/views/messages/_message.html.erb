<div class="entry">
  <div class="thumb">
    <%= image_tag message.user.icon.url(:thumb) %>
  </div>
  <div class="info">
    <div class="user">
      <span class="name">
        <%= message.user && message.user.username %>
      </span>
      <span class="id">
        <%= message.user && "@" + message.user.userid %>
      </span>
    </div>
    <div class="datetime">
      <%= message.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
    </div>
  </div>
  <div class="message">
    <%= simple_format(auto_link(h(message.body))) %>
  </div>
</div>
